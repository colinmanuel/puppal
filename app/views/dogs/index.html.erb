<!-- Begin Header -->
<div data-role="header" data-position="fixed">
  <h1>PupPal</h1>
<a data-iconshadow="false" data-shadow="false" data-iconpos="notext" style="display:none" >&nbsp;</a>

<a href="#nav-panel" data-role="button" data-icon="bars" data-iconpos="notext" data-iconshadow="false" data-shadow="false" >&nbsp;</a>
</div>
<!-- End Header -->

<%= render "mobilepanel" %>

<!-- <%= image_tag "http://www.austinpetsalive.org/wp-content/themes/apa_v2/images/logos/logo_apa.png", :width => "50%", :style => 'display: block; margin-left: auto; margin-right: auto;' %>-->


<div data-role="content">
    <h3>Find dogs by:</h3>
<!-- by name -->
    <div data-role="collapsible" data-theme="c" data-content-theme="c" data-inset="false">
        <h3>Name</h3>
            <div class="all-dogs"> 
                <ul data-role="listview" data-filter="true" data-autodividers="true" data-filter-placeholder="Search..." data-inset="true">

                    <% @dogs.each do |dog| %>
                        <li>
                            <%= link_to edit_dog_path(dog), {"data-transition" => "slidefade"}  do %>


                            <h3><%= dog.name %></h3>
                            <% end %>
                        </li>
                    <% end %>
                </ul>
            </div>
    </div>

<!-- by priority -->

<div data-role="collapsible" data-theme="c" data-content-theme="c" data-inset="false">
            <h3>Priority</h3>                    

            <div data-role="collapsible" data-theme="d">
                <h3 class="ui-link-inherit">High <span class="ui-li-count ui-btn-up-c ui-btn-corner-all"><%= Dog.high.count %></span></h3>
                <ul data-role="listview" data-count-theme="a">
                    <% Dog.high.each do |dog| %>
                        <li>
                            <%= link_to edit_dog_path(dog), {"data-transition" => "slidefade"}  do %>
                            <h3><%= dog.name %></h3>
                            <% end %>
                        </li>
                    <% end %>
                </ul>  
            </div><!-- /high -->

            <div data-role="collapsible" data-theme="e">
                <h3>Medium <span class="ui-li-count"><%= Dog.med.count%></span></h3>
