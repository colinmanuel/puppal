                            <% end %>
                        </li>
                    <% end %>
                </ul>
            </div><!-- /medium -->

            <div data-role="collapsible" data-theme="g">
                <h3>Low <span class="ui-li-count ui-btn-up-c ui-btn-corner-all"><%= Dog.low.count%></span></h3>
