<div data-role="collapsible-set" data-theme="a" data-inset="false">
        <h3>Find dogs by:</h3>

    <div data-role="collapsible">
        <h3>Name</h3>
            <div class="all-dogs"> 
                <ul data-role="listview" data-filter="true" data-autodividers="true" data-filter-placeholder="Search..." >

                    <% @dogs.each do |dog| %>
                        <li>
                            <%= link_to edit_dog_path(dog) do %>
                            <h3><%= dog.name %></h3>
                            <% end %>
                        </li>
                    <% end %>
                </ul>
            </div>
    </div>
    <div data-role="collapsible">
        <h3>Priority</h3>    
        <ul data-role="listview" data-count-theme="a">
            <li>
                <h4>3</h4><span class="ui-li-count"><%= Dog.low.count %></span>
                    <ul data-role="listview" data-count-theme="a">
                        <% Dog.low.each do |dog| %>
                            <li>
                                <%= link_to edit_dog_path(dog) do %>
                                <h3><%= dog.name %></h3>
                                <% end %>
                            </li>
                        <% end %>
                    </ul>               
            </li>
            <li>
