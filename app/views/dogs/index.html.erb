<!-- Begin Header -->
<div data-role="header" data-position="fixed">
  <h1>Select Dog</h1>
<a data-iconshadow="false" data-shadow="false" data-iconpos="notext" style="display:none" >&nbsp;</a>

<a href="#nav-panel" data-icon="bars" data-iconpos="notext" >&nbsp;</a>
</div>
<!-- End Header -->

<%= render "mobilepanel" %>

<!-- <%= image_tag "http://www.austinpetsalive.org/wp-content/themes/apa_v2/images/logos/logo_apa.png", :width => "50%", :style => 'display: block; margin-left: auto; margin-right: auto;' %>-->


<div data-role="content">
<!-- <div data-role="collapsible-set" data-theme="a" data-inset="false"> -->
<div data-role="collapsible-set" data-theme="a">
        <h3>Dog Location</h3>

    <div data-role="collapsible">
        <h3>All Dogs</h3>
            <div class="all-dogs"> 
                <ul data-role="listview" data-filter="true" data-autodividers="true" data-filter-placeholder="Search dogs..." >
                    <% @dogs.each do |dog| %>
                        <li>
                            <%= link_to edit_dog_path(dog) do %>
                            <h3><%= dog.name %></h3>
                            <% end %>
                        </li>
                    <% end %>
                </ul>
            </div>
    </div>
    <div data-role="collapsible">
        <h3>By Priority</h3>     
        <ul data-role="listview" data-count-theme="a">
            <li><a href="#">5 <span class="ui-li-count">12</span></a></li>
            <li><a href="#">4 <span class="ui-li-count">0</span></a></li>
            <li><a href="#">3 <span class="ui-li-count">4</span></a></li>
            <li><a href="#">2 <span class="ui-li-count">328</span></a></li>
            <li><a href="#">1 <span class="ui-li-count">62</span></a></li>
        </ul>
    </div>
    <div data-role="collapsible">
        <h3>By Location</h3>     
        <ul data-role="listview" data-count-theme="a">
            <li><a href="#">TLAC <span class="ui-li-count">12</span></a></li>
            <li><a href="#">51st and Mueller <span class="ui-li-count">0</span></a></li>
            <li><a href="#">Brodie <span class="ui-li-count">4</span></a></li>
            <li><a href="#">SoCo <span class="ui-li-count">328</span></a></li>
            <li><a href="#">Lakeline <span class="ui-li-count">62</span></a></li>
        </ul>
    </div>
    <div data-role="collapsible">
        <h3>By Need</h3>     
        <ul data-role="listview" data-count-theme="a">
            <li><a href="#">Photos <span class="ui-li-count">12</span></a></li>
            <li><a href="#">Bios <span class="ui-li-count">0</span></a></li>
            <li><a href="#">Videos <span class="ui-li-count">4</span></a></li>
        </ul>      
    </div>
</div>


</div>


<%= render "mobilefooter" %>
